<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.netider.AzureAdDeployer.gui.controller.MainNavigationController">
    <top>
        <MenuBar fx:id="topMenu" style="-fx-background-color: #1c313a;" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openEditButton" text="Edit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openAboutButton" text="About" />
                  <MenuItem mnemonicParsing="false" onAction="#openHelpButton" text="Help" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <AnchorPane prefHeight="500.0" prefWidth="60.0" BorderPane.alignment="CENTER">
            <children>
                <AnchorPane layoutY="46.0" prefHeight="500.0" prefWidth="44.0" style="-fx-background-color: #455a64;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="217.0" prefWidth="44.0">
                            <children>
                                <JFXButton onAction="#openHomeButton" styleClass="main-nav-button">
                                    <graphic>
                                        <ImageView fitHeight="46.0" fitWidth="32.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/home.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0"/>
                                    </VBox.margin>
                                </JFXButton>
                                <JFXButton layoutX="10.0" layoutY="20.0" onAction="#openConnectionOverviewButton"
                                           styleClass="main-nav-button">
                                    <graphic>
                                        <ImageView fitHeight="46.0" fitWidth="32.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/dashboard.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                        </JFXButton>
                                <JFXButton onAction="#openSettingsButton" styleClass="main-nav-button">
                                    <graphic>
                                        <ImageView fitHeight="46.0" fitWidth="32.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/settings.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </JFXButton>
                                <JFXButton layoutX="10.0" layoutY="170.0" onAction="#openUsersManagerButton"
                                           styleClass="main-nav-button">
                                    <graphic>
                                        <ImageView fitHeight="46.0" fitWidth="32.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/person.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                        </JFXButton>
                                <JFXButton onAction="#openUsersManagerLegacyButton" styleClass="main-nav-button">
                                    <graphic>
                                        <ImageView fitHeight="46.0" fitWidth="32.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/person_legacy.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </JFXButton>
                                <JFXButton layoutX="10.0" layoutY="120.0" onAction="#openConsoleButton"
                                           styleClass="main-nav-button">
                                    <graphic>
                                        <ImageView fitHeight="46.0" fitWidth="32.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/console.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                        </JFXButton>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </left>
</BorderPane>
