<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.2"
          fx:controller="ch.netider.AzureAdDeployer.gui.controller.CreateConnectionFormController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints>
        </ColumnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0"/>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Edit Connection" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER"
           GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24"/>
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20"/>
        </GridPane.margin>
    </Label>


    <!-- Add Name Label -->
    <Label text="Name : " GridPane.columnIndex="1" GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="1"/>


    <!-- Add Email Label -->
    <Label text="Email ID : " GridPane.columnIndex="1" GridPane.rowIndex="2">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="2"/>


    <!-- Add cancle Button -->
    <Button fx:id="cancleButton" cancelButton="true" onAction="#handleCancleButtonAction" prefHeight="40"
            prefWidth="100" text="Cancle" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER"
            GridPane.rowIndex="3" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="250" right="0" top="20"/>
        </GridPane.margin>
    </Button>


    <!-- Add Submit Button -->
    <Button fx:id="submitButton" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="40"
            prefWidth="100" text="Save" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER"
            GridPane.rowIndex="3" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20"/>
        </GridPane.margin>
    </Button>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
